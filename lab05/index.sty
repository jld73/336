// Sets display with the given color
display-color()
    padding: 15px
    border: 1px solid black
    background: arguments

body 
    font: 24px Helvetica
    background: #999999

#main 
    min-height: 800px
    margin: 0px
    padding: 0px
    display: flex
    flex-flow: row

    article 
        display-color: #dddd88
        flex: 3 1 60%
        order: 2

    nav 
        display-color: #ccccff
        flex: 1 6 20%
        order: 1
        font-size: 1.2em

    aside 
        display-color: #ccccff
        flex: 1 6 20%
        order: 3
        font-style: italic
        font-size: .8em

header, footer 
    display: block
    min-height: 100px
    display-color: #ffeebb

p 
    margin: 2px

header 
    font-family: Arial, Helvetica, sans-serif
    font-size: 1.5em
    font-weight: bold

footer 
    font-size: .5em

// Mobile layout
@media all and (max-width: 640px) 
    #main, #page 
        flex-direction: column
    
    #main
        // Adjust display order
        article, aside 
            order: 1
    
        nav 
            order:0
        // Adjust size
        nav, aside, header, footer 
            min-height: 50px
            max-height: 150px
    
 